{% extends 'base.html.twig' %}

{% block title %} Question: {{ question }}{% endblock %}
{% block body %}
    {% if question %}
        <h1>{{ question }}</h1>
        <div>
            eventually, we'll print the full question here
        </div>
    {% endif %}

    {% if answers %}
        <h1>Answers ({{ answers|length }})</h1>
        <ul>
            {% for answer in answers %}
                <li>{{ answer }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>casse toi</p>
    {% endif %}

{% endblock %}
